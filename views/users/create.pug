extends ../layouts/common.pug
block content
    h1 Create User 

    if errors
        each error in errors
            .alert.alert-danger= error
  
    form(action="/users/create", method="POST" enctype="multipart/form-data")
        .form-group
            label(for='exampleInputEmail1') User Name
            input#exampleInputEmail1.form-control(type='text', aria-describedby='emailHelp', placeholder='Name' , name='name')
            small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
        .form-group
            label(for='exampleInputPassword1') Phone Number
            input#exampleInputPassword1.form-control(type='text', placeholder='Phone', name='phone')
        .form-group
            label(for='avatar') Avatar
            input#avatar.form-control(type='file', placeholder='Phone', name='avatar')
        button.btn.btn-primary(type='submit') Create
